%li.dropdown-header.no-link{role:'presentation'}
  = link_to menu_bank.nickname, bank_account_virtual_book_lines_path(menu_bank), {role:'menuitem'}
-if menu_bank.check_deposits.any?
  %li{role:'presentation'}= link_to 'Liste remises',
  organism_bank_account_check_deposits_path(@organism, menu_bank), {role:'menuitem'}
%li{role:'presentation'}
  =link_to_if(CheckDeposit.nb_to_pick(menu_bank.sector) > 0,  'Nlle Remise',
    new_organism_bank_account_check_deposit_path(@organism,menu_bank), {role:'menuitem'}) do |name|
    %span.disable= name
-if menu_bank.unpointed_bank_extract?
  %li{role:'presentation'}= link_to 'Pointage', 
  pointage_bank_extract_bank_extract_lines_path(menu_bank.first_bank_extract_to_point),
  {role:'menuitem'} 
%li{role:'presentation'}= link_to 'A pointer',
  lines_to_point_bank_account_bank_extracts_path(menu_bank), {role:'menuitem'} 
%li{role:'presentation'}= link_to 'Extraits de comptes',
  bank_account_bank_extracts_path(menu_bank), {role:'menuitem'}