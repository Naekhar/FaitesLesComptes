
          <tr class="totaux">
            <td></td> <td></td> <td></td>
            <td>Totaux du mois</td>
            <td class="nombre"><%=  debit_credit(@total_debit) %></td>
            <td class="nombre"><%=  debit_credit(@total_credit) %></td>
          </tr>
          <tr class="totaux_generaux">
            <td></td> <td></td> <td></td>
            <td>Totaux généraux</td>
            <td class="nombre"><%=  debit_credit(@total_debit + @solde_debit_avant) %></td>
            <td class="nombre"><%=  debit_credit(@total_credit+ @solde_credit_avant) %></td>
          </tr>
          <tr class="totaux_generaux">
            <td></td> <td></td> <td></td>
            <td>Solde</td>
            <td class="nombre"><%=  debit_credit(-@solde) if @solde < 0  %></td>
            <td class="nombre"><%=  debit_credit(@solde) if @solde > 0  %></td>
          </tr>


