= content_for :menu do 
  = icon_to 'retour.png', :back 


.champ
  %h3
    = "#{@virtual_book.title}  : liste des écritures"
    %ul.mois
      = submenu_mois(@period, {action:'index', controller:'virtual_bank_book_lines', :id=>@bank_account.id}) 
  .inner-champ

    %table.table.table-striped.table-bordered.table-condensed.data_table(cellpadding="0" cellspacing="0" border="0" id="ltps_table")
      %thead
        %tr
          %th.pc15.date-euro Date
          %th.pc40 Libellé
          %th.pc15 Dépenses
          %th.pc15 Recettes
          %th.pc15 Actions

        %tbody#ltps
          - @monthly_extract.lines.each do |ltp|
            %tr{'class'=>'ltp', 'id'=>"#{ltp.id}" }
              %td= l ltp.date
              %td= ltp.narration
              %td.numeric.debit= debit_credit ltp.credit
              %td.numeric.credit= debit_credit ltp.debit
              %td= line_actions(ltp)
        %tfoot#table_foot
          %tr.total#totaux
            %th.numeric(colspan="2" rowspan="1") Totaux
            %th.numeric= 'total_credit'
            %th.numeric= 'total_debit'
