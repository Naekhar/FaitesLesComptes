<div class="champ">
  <h3>Création d'un compte</h3>

<div class="inner-champ">

<div class="inputs">

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),  :html=> {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :name, :required => true, :autofocus => true,  input_html: {class: "span3"} %>
    <%= f.input :email, :required => true,  input_html: {class: "span3"}  %>
    <%= f.input :password, :required => true, hint:'8 caractères minimum', input_html: {class: "span3"}  %>
    <%= f.input :password_confirmation, :required => true,  input_html: {class: "span3"}  %>
 

  <div class="form-actions">
    <%= f.button :submit, "S'inscrire", class: "btn-primary span2" %>
  </div>
<% end %>
 </div>


</div></div>