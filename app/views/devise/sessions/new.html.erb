<div class="champ">
  <h3>Entrée
    <ul class="mois">
      <li class="active">


        <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %><br />
        <% end -%>
      </li>
    </ul>
  </h3>
  <div class="inner-champ">
    <div class='panel-body'>
    

      <%= simple_form_for(resource, 
        :as => resource_name,
        :url => session_path(resource_name), 
        :html=> {class: 'form-horizontal'}, wrapper: :horizontal_form, 
        wrapper_mappings:{boolean: :horizontal_boolean}) do |f| %>
      <div class="form-inputs">
          <%= f.input :email, :required => false,
            :autofocus => true,
            my_wrapper_html: {class: "col-lg-3"} %>
          <%= f.input :password, :required => false ,  my_wrapper_html: {class: "col-lg-3"} %>
          <%= f.input :remember_me, label:'Se souvenir de moi', :as=>:boolean if devise_mapping.rememberable? %>

     </div>
    <div class="form-actions">
      <%= f.button :submit, "Valider", class: "btn-primary col-lg-2 col-lg-offset-3" %>
      </div>
    <% end %>

    </div>
          </div>
        </div>