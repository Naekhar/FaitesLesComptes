<div class="champ">
  <h3>Réinitialisation du mot de passe</h3>
<div class="inner-champ">

<div class="inputs">


<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put , class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

 
    <%= f.input :password, :required => true, :hint=>'8 caractères minimum', :autofocus => true,  input_html: {class: "span3"}  %>
    <%= f.input :password_confirmation, :required => true,  input_html: {class: "span3"}  %>


  <div class="form-actions">
    <%= f.button :submit, "Valider", class: "btn-primary span3"  %>
  </div>
<% end %>
</div>

 </div>



</div>