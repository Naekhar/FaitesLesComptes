<%= content_for :menu do %>

<%= icon_to 'retour.png', listing_lines_path(@listing) %>
<% end -%>

<%= content_for :submenu do %>
<%= link_to 'Ecritures uniques', new_listing_line_path(@listing) %>
<% end %>

<fieldset>
  <legend>
    <%=  @listing.title.capitalize %> : nouvelle ligne multiple
  </legend>
<%  SimpleForm.wrapper_tag = :td %>

<%=  simple_form_for([@listing,@mline],:url => listing_multiple_lines_path, :method => :post )  do |f| %>
  <%= f.error_notification %>

  <div class="inputs_inline" id="entry_lines" >

  <table>
    <thead>
      <tr>
    <th>Date</th>
    <th>Libellé</th>
    <th>Nature</th>
    <th>Destination</th>
    <th>Débit</th>
    <th>Crédit</th>
      </tr>
    </thead>
    <tbody>
      <tr>

  <%=  f.input :line_date, label: false  %>
  <%=  f.input :narration, label: false, input_html: {size: 20 } %>
  <%=  f.association :nature , label: false  %>
  <%=  f.association :destination , label: false  %>
  <%=  f.input :debit , label: false, input_html: {size: 12, value: two_decimals(@mline.debit) } %>
  <%=  f.input :credit , label: false, input_html: {size: 12, value: two_decimals(@mline.credit) } %>

  </tr>
      <tr>
        <td>Répéter pendant <%= text_field :repete, :nombre, :size=>4, :class=>'numeric' %></td>
        <td><%= select(:repete, :periode, ['Semaines', 'Mois', 'Trimestres'], {:selected=>'Mois'})  %></td>
       <td><%= f.button :submit %></td>
      </tr>
  </tbody>
    </table>
</div>
  <% end %>

  </fieldset>