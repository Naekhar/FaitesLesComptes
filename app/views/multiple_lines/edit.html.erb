<%= content_for :menu do %>

<%= icon_to 'retour.png', book_lines_path(@book) %>
<% end -%>

<%= content_for :submenu do %>
<%= link_to 'Ecritures uniques', new_book_line_path(@book) %>
<% end %>

<div class="champ">
  <h3>
    <%=  @book.title.capitalize %> : modification ligne multiple
  </h3><div class="inner-champ">

<%  SimpleForm.wrapper_tag = :td %>

<%=  simple_form_for([@book,@mline],:url => book_multiple_line_path(:book_id=>@book.id, :id=>@mline.id), :method => :put )  do |f| %>
  <%= f.error_notification %>

  <div class="inputs_inline" id="entry_lines" >

  <table>
    <thead>
      <tr>

    <th>Libellé</th>
    <th>Nature</th>
    <th>Destination</th>
    <th>Débit</th>
    <th>Crédit</th>
      </tr>
    </thead>
    <tbody>
      <tr>


  <%=  f.input :narration, label: false, input_html: {size: 20 } %>
  <%=  f.association :nature , label: false  %>
  <%=  f.association :destination , label: false  %>
  <%=  f.input :debit , label: false, input_html: {size: 12, value: two_decimals(@mline.debit) } %>
  <%=  f.input :credit , label: false, input_html: {size: 12, value: two_decimals(@mline.credit) } %>

 

       <td><%= f.button :submit %></td>
      </tr>
  </tbody>
    </table>
</div>
  <% end %>

  </div></div>