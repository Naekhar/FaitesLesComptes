<ul>
  <li><h2>ORGANISMES</h2>
    <ul>
      <% Organism.all.each do |r| %> <!-- reject {|r| r.new_record? }.each do |r| %> -->
        <li><%= link_to r.title, organism_path(r)  %></li>
      <% end %>
    </ul>
  </li>
</ul>
<!--TODO normalement dans ce menu (de la zone Public), il ne peut pas y avoir de new_record? -->
<% if (@organism  && !@organism.new_record?) %>
<ul>
  <li><h2>Livres</h2>
    
      <ul>
        <% @organism.books.each do |b| %>
        <li><%= link_to b.title, book_lines_path(b), title: b.description  %>
        <ul>
          <li> <%= link_to 'Ecrire', new_book_line_path(b)  if @organism.can_write_line? %></li>
          <li><%= link_to 'Afficher', book_lines_path(b) %></li>
        </ul>
          </li>
       <% end %>
              
      </ul>
   
  </li>
</ul>

<ul>
  <li><h2>Banques</h2>
     <ul>
    <% @organism.bank_accounts.each do |b| %>
        <li><%= link_to b.to_s, organism_bank_account_path(@organism,b)  %>
            <ul>
              <li><%=link_to  'Remises chèques', organism_bank_account_check_deposits_path(@organism,b)  %></li>
              <li><%= link_to 'Nlle Remise', new_organism_bank_account_check_deposit_path(@organism,b) %></li>
              <% if b.unpointed_bank_extract? %>
                  <li><%= link_to 'Pointage', pointage_organism_bank_account_bank_extract_path(@organism,b, b.first_bank_extract_to_point)  if b.unpointed_bank_extract? %></li>
               <% end %>
              <li><%= link_to 'Extraits de comptes', organism_bank_account_bank_extracts_path(@organism, b) %></li>
              <li><%= link_to 'Nouvel Extrait', new_organism_bank_account_bank_extract_path(@organism,b) %> </li>
            </ul>
        </li>
    <% end %>
    </ul>
  </li>
</ul>

<ul>
  <li><h2>Caisse</h2>
     <ul>
    <% @organism.cashes.each do |c| %>
     <li><%= link_to c.name, cash_path(c)  %>
       <ul>
         <li><%= link_to 'Afficher', cash_cash_lines_path(c) %></li>
         <li><%= link_to 'Contrôles', cash_cash_controls_path(c) %></li>
         <li><%= link_to 'Ajouter', new_cash_cash_control_path(c) %></li>
       </ul>
       </li>
    <% end %>
     
         </ul>
  </li>
</ul>

<ul>
  <li><h2>Analyses</h2>
    <ul>
      <li>
<%= link_to 'Par Nature', stats_organism_period_natures_path(@organism,@period), title: 'Analyser les recettes et dépenses par nature'  %>
      </li>
 
    </ul>
  </li>
</ul>

<ul id="menu_exercices">
  <li><h2>Exercices</h2>
    <ul>
   
      <%  @organism.periods.each do |p| %>
   <%=   content_tag :li, (link_to p.exercice, change_organism_period_path(@organism, p)) %>
      <% end %>

    </ul>
  </li>
</ul>
<% end %>

 