<%= content_for :menu do %>
  <%= icon_to 'nouveau.png', new_organism_path %>
<% end -%>

<fieldset><legend> Liste des organismes </legend>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @organisms.each do |organism| %>
  <tr>
    <td><%= organism.title %></td>
    <td><%= organism.description %></td>
    <td><%= icon_to 'afficher.png', organism_listings_path(organism) %></td>
    <td><%= icon_to 'modifier.png', edit_organism_path(organism) %></td>
    <td><%= icon_to 'supprimer.png', organism, :confirm => 'Etes vous sur ?', :method => :delete %></td>
  </tr>
<% end %>
</table>

</fieldset>


