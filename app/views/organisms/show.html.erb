<%= content_for :menu do %>
  <%= icon_to 'navigation90.png', organisms_path %>
<% end %>

<div class="row-fluid">
<div class="span12 row-pave pave message">
  <h2>
    Vous avez <%= pluralize infos(@organism).size, 'message' %>
    <%= image_tag 'icones/mail-open.png', id: 'mail_img' %>
  </h2>
  <div id="mail_ul">
  <ul>
    
   <% infos(@organism).each do |mess| %>
    <%= content_tag :li do %>
    <%=  mess[:text] %>
    <%= mess[:icon] if mess[:icon] %>
    <% end %>
        <% end %>
  </ul>
  </div>
</div>
</div>

<% @paves.in_groups_of(3, false) do |p|  %>
<div class ="row-fluid row-pave">
  <%= draw_pave(p[0], 'span4') if p[0] %>
  <%= draw_pave(p[1], 'span4') if p[1] %>
  <%= draw_pave(p[2], 'span4') if p[2] %>
</div>
<% end %>


