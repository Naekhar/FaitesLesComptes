<div class="champ">
  <h3>Liste des contrôles : <%= @cash.name %>
   <%= render 'submenu_mois'  %>
  </h3>
  <div class="inner-champ">
    <div class="row-fluid">
 <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed data_table span6" >
    <thead>
      <tr>
        <th>Date</th>
        <th>Montant relevé</th>
        <th>Montant théorique</th>
        <th>Ecart de caisse</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cash_controls.each do |r| %>
      <tr>
        <td><%=l  r.date %></td>
        <td class="nombre"><%= debit_credit r.amount %></td>
        <td class="nombre"><%= debit_credit @cash.sold(r.date) %></td>
        <td class="nombre"><%= debit_credit r.amount- @cash.sold(r.date) %></td>
        <td>
          <%= icon_to 'modifier.png', edit_cash_cash_control_path(@cash,r), :id=>"icon_modifier_cash_control_#{r.id}" %>
          <%= icon_to 'verrouiller.png', lock_cash_cash_control_path(@cash,r),
            :confirm=>"Cette action verrouille ce pointage de caisse ainsi que les écritures de caisse correspondantes \n#{cash_difference(r)}\nConfirmez vous ?" ,
            :method=>:put unless r.locked? %>
          </td>
       </tr>
      <% end %>
    </tbody>
  </table>
    </div>
  </div>
</div>
