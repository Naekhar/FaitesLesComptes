<% if @bank_extract.diff_credit? %>
$('#img_danger_total_credit').show().attr('data-original-title', '<%= "Ecart de pointage de #{@bank_extract.diff_credit}" %>');
<% else %>
 $('#img_danger_total_credit').hide();
 <% end %>

 <% if @bank_extract.diff_debit? %>
$('#img_danger_total_debit').show().attr('data-original-title', '<%= "Ecart de pointage de #{@bank_extract.diff_debit}" %>') ;
<% else %>
 $('#img_danger_total_debit').hide();
 <% end %>


