= content_for :menu do
  = icon_to 'navigation90.png', bank_account_bank_extracts_path(@bank_account)

.row_fluid#message 
 
.champ
  %h3= "#{@bank_account.nickname} : Liste des écritures non pointées"
    
  .inner-champ

    %table.table.table-striped.table-bordered.table-condensed.data_table(cellpadding="0" cellspacing="0" border="0" id="ltps_table")
      %thead
        %tr
          %th.pc15.date-euro Date
          %th.pc40 Libellé
          %th.pc15 Dépenses
          %th.pc15 Recettes
          %th.pc15 Actions

        %tbody#ltps
          - @lines_to_point.lines.each do |ltp|
            %tr{'class'=>'ltp', 'id'=>"#{ltp.id}" }
              %td= l ltp.date
              %td= ltp.narration
              %td.numeric.debit= debit_credit ltp.credit
              %td.numeric.credit= debit_credit ltp.debit
              %td= line_actions(ltp)
