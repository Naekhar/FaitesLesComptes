.inputs.row-fluid#transfer
  = simple_form_for([@organism, @transfer], :html=>{class:'form-inline'})  do |f|
    =f.error_notification
    .row-fluid
      .span12
        = f.input :date_picker,:label=> 'Du', wrapper_html:{class:'span3'}, label_html:{class: 'span4'}, input_html:{class:'span8', date_min:@period.start_date, date_max:@period.close_date, :disabled=>@transfer.partial_locked?}, :required => true, :as=>:date_picker
        = f.input :narration,  :label=>'LibellÃ© ', :wrapper_html=>{:class=>'span6'}, label_html:{class:'span2'}, input_html: {class: "span10" }, :disabled=>@transfer.partial_locked?
        = f.input :amount , :wrapper_html=> {class: "span3"},label_html:{class:'span4'}, input_html: {class: "span8", value: two_decimals(@transfer.amount) },  :disabled=>@transfer.partial_locked?, label: 'Montant'
    .row-fluid
      .span12
        = f.association :debitable, :wrapper_html=>{class: "span3"}, :label=> 'De',label_html: {class: 'span4'}, input_html: {class: "span8", size: 8},
                :collection => [['Banques', @period.bank_accounts.all],['Caisse',@period.cash_accounts.all]],
                :as => :grouped_select, :group_label_method=> :first, :group_method => :last, 
                :label_method=> :long_name, :value_method=> :id, :required=>true,  :include_blank=>false, :disabled=>@transfer.debit_locked?
        = f.association :creditable, :wrapper_html=>{class: "span3"}, :label=> 'Vers',label_html: {class: 'span4'}, input_html: {class: "span8", size: 8},
                :collection => [['Banques', @period.bank_accounts.all],['Caisse',@period.cash_accounts.all]],
                :as => :grouped_select, :group_label_method=> :first, :group_method => :last,
                :label_method=> :long_name, :value_method=> :id,  :required=>true,  :include_blank=>false, :disabled=>@transfer.credit_locked?
        

    .row-fluid
      .span12
        .form-actions.offset4
          = f.button :submit, id: 'new_line_button', class: "btn-primary span3"

