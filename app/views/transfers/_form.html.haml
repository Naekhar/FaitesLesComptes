.inputs.row-fluid#entry_lines
  =  simple_form_for([@organism, @transfer])  do |f| 
    = f.error_notification
    .row-fluid
      .span12
        .control-group.select.required
          %ul.span2
            %li.list-label
              %label.select.required.control-label{:for=>"pick_date_line"}
                %abbr{:title=>"exigé"}
                  *
                Date
          = picker_date 'transfer[pick_date]', @period.start_date, @period.close_date , @transfer.pick_date
          = f.input :narration,  :label=>'Libellé ', :jclabel_wrapper_html=>{:class=>'span2'}, input_html: {class: "span6" }
          = f.input :amount , :jclabel_wrapper_html=> {class: "span2"}, input_html: {class: "span2", value: two_decimals(@transfer.amount) }
    .row-fluid
      .span12
        = f.association :debitable,  :jclabel_wrapper_html=>{class: "span2"}, input_html: {class: "span2"}, :collection => @organism.bank_accounts.all, label_method: :number, :include_blank=> false
        = f.association :creditable, :jclabel_wrapper_html=>{class: "span2"}, input_html: {class: "span2"}, :collection => @organism.cashes.all, :include_blank=> false
    .row
      .offset2.span2.clear
        = f.button :submit, id: 'new_line_button', class: "btn-primary span2"
