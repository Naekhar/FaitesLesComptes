<%= content_for :bandeau do %>
<%= icon_to 'nouveau.png', new_nature_path %>
<% end -%>

<fieldset><legend> Liste des natures </legend>
<table>
  <tr>
    <th>Name</th>
    <th>Organism</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @natures.each do |nature| %>
  <tr>
    <td><%= nature.name %></td>
    <td><%= nature.organism_id %></td>
    <td><%= nature.comment %></td>
    <td><%= icon_to 'afficher.png', nature %></td>
    <td><%= icon_to 'modifier.png', edit_nature_path(nature) %></td>
    <td><%= icon_to 'supprimer.png', nature, :confirm => 'Etes vous sur ?', :method => :delete %></td>
  </tr>
<% end %>
</table>

</fieldset>


