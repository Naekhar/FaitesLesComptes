<%= content_for :menu do %>
  <%=  icon_to 'pdf.png', stats_organism_period_natures_path(@organism, @period, destination:@filter, :format=>'pdf'), title:'PDF', :target=>'_blank' %>
  <%=  icon_to 'report-excel.png',stats_organism_period_natures_path(@organism, @period, destination:@filter, :format=>'xls'), title:'XLS', :target=>'_blank' %>
  <%=  icon_to 'table-export.png', stats_organism_period_natures_path(@organism, @period, destination:@filter, :format=>'csv'), title:'CSV', :target=>'_blank' %>
<% end -%>


<div class="champ">
  <h3>
    Statistiques par natures
  </h3>
 </div>

    <%= form_tag stats_organism_period_natures_path(@organism, @period),:method =>:get, :class=>"form-search"  do %>
     <label for="destination" class="control-label">Filtre</label>
      <%= select_tag :destination,
        options_for_select([['Toutes destinations', 0]] + @organism.destinations.collect {|d| [d.name, d.id]}, @filter),
      :class=>"input-medium" %>
 
    <%= submit_tag 'Rafraichir', :class=>'btn' %>
 
    <% end %>
      
  


<div class="row-fluid">

  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed data_table" >
    <thead>
      <tr>
        
        <% @sn.title.each do |t| %>
          <%=  content_tag :th, t  %>
        <% end %>
        

      </tr>
    </thead>

    <tfoot>
      <tr class="total" id="totaux">
        <% @sn.totals.each do |t| %>
        
         <%=  content_tag :th , debit_credit(t) , class:'numeric'  %>
        <% end %>
      </tr>

    </tfoot>

    <tbody>

      <% @sn.lines.each do |line| %>
        <tr>
          <% line.each do |val| %>
            <%=  content_tag :td, debit_credit(val), :class=>'numeric'  %>
          <% end %>
        </tr>
      <% end %>
        
  


    </tbody>


  </table>

</div>

