<fieldset><legend>
    Statistiques par natures
  </legend>

  <%= form_tag stats_organism_natures_path(@organism),:method => :get, :style=>"display: inline;"  do %>

   <label for="destination">Destination : </label>
     <%= select_tag :destination, options_for_select([['Toutes', 0]] + @organism.destinations.collect {|d| [d.name, d.id]}, @filter) %>
     <%= submit_tag 'Rafraichir', :class=>'button' %>
<% end %>
</fieldset>
<table class="data_table display">
  <thead>
    <tr>
      <th>Nature</th>
      <% @period.list_months_year.each do |my| %>
        <%=  content_tag :th,my  %>
      <% end %>
      <th>Cumul</th>

    </tr>
  </thead>
     <tfoot>
    <tr>
      <th>Total Recettes <br />Total Dépenses<br />Total Différence </th>
       <% @total_recettes.size.times do |index| %>
      <th class="nombre"><%=  debit_credit @total_recettes[index] %><br />
<%=debit_credit  @total_depenses[index] %><br />
<%=debit_credit(@total_recettes[index]+@total_depenses[index])  %></th>
      <% end %>
    </tr>

    </tfoot>
  <tbody>

    <% @recettes.each do |r| %>
      <tr>
        <td><%= r.name %></td>
        <% r.stat_with_cumul(@period, @filter).each do |val| %>
          <%=  content_tag :td, debit_credit(val), :class=>'nombre'  %>
        <% end %>
      </tr>
    <% end %>
    <% @depenses.each do |r| %>
      <tr>
        <td><%= r.name %></td>
        <% r.stat_with_cumul(@period, @filter).each do |val| %>
          <%=  content_tag :td, debit_credit(val), :class=>'nombre'   %>
        <% end %>
      </tr>
    <% end %>


  </tbody>

 
  </table>

   

