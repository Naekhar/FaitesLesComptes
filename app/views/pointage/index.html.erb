<%= content_for :menu  do %>
  <%= icon_to 'navigation90.png', listing_bank_extracts_path(@listing), :title=>'Retour vers la liste des extraits' %>
<% end %>

<%= content_for :submenu do %>
  
<%= link_to 'Essai de fenetre popup pour créer une nouvelle ligne',
          new_listing_line_path(@listing) ,
          onclick: "window.open(this.href,'create_company', 'height=600, width=600');return false;" %>
<% end %>
<fieldset>
  <legend>
    Pointage de l'extrait <%= @bank_extract.reference %>
  </legend>
  <table>
    <tr>  <%= render 'bank_extracts/table_header' %></tr>
    <tr><%= render @bank_extract %>  </tr>
    <tr>
      <td>Lignes pointées</td>
      <td></td>
      <td></td>
      <td class="numeric"><%= two_decimals @bank_extract.begin_sold %> </td>
      <td id="total_lines_debit" class="numeric"><%= two_decimals @bank_extract.total_lines_debit %> </td>
      <td id="total_lines_credit" class="numeric"><%= two_decimals @bank_extract.total_lines_credit %></td>
      <td id="lines_sold" class="numeric"><%= two_decimals @bank_extract.lines_sold %></td>
      <td></td>
    </tr>
  </table>
</fieldset>
<table>
  <thead>
     <tr>
        <%= render 'lines/table_header'  %>
       <th></th>
     </tr>
  </thead>

  <tbody>
    <% unless @lines.empty? %>
     
      <%  @lines.each do |line | %>

            <% if line.pointed? %>
     <tr class='pointed' id='<%= "tr_line_#{line.id}" %>'  >        <%= render partial: 'pointedline', :object=> line %></tr>
            <% else %>
    <tr class='not_pointed' id='<%= "tr_line_#{line.id}" %>'  >     <%= render partial: 'unpointedline', :object=> line %></tr>
            <% end %>
      
      
      <% end %>
    <% end %>
  </tbody>

</table>
