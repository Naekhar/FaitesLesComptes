<table>
  <thead>
     <tr>
        <%= render 'lines/table_header'  %>
       <th></th>
     </tr>
  </thead>

  <tbody>
    <% unless @lines.empty? %>
     
      <%  @lines.each do |line | %>

            <% if line.pointed? %>
     <tr class='pointed' id='<%= "tr_line_#{line.id}" %>'  >        <%= render partial: 'pointedline', :object=> line %></tr>
            <% else %>
    <tr class='not_pointed' id='<%= "tr_line_#{line.id}" %>'  >     <%= render partial: 'unpointedline', :object=> line %></tr>
            <% end %>
      
      
      <% end %>
    <% end %>
  </tbody>

</table>
