<%  SimpleForm.wrapper_tag = :div %>

<%= simple_form_for([:admin,@organism,@nature]) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :income_outcome, :as=>:radio %>
    <%= f.input :name %>
   
    <%= f.input :comment, input_html: {rows: 4} %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
