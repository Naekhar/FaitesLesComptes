= content_for :menu do
  = icon_to 'nouveau.png',
    new_admin_organism_period_nature_path(@organism, @period, book_id:@book.id)

.champ#index
  %h3 Natures du livre #{@book.title}  
  %table.table.table-nature.table-striped.table-bordered.table-condensed(id="#{@book.title.parameterize}" cellpadding="0" cellspacing="0" border="0"  )
    %thead
      %tr
        %th.pc5 Position
        %th.pc20 Nom
        %th.pc35 Commentaire
        %th.pc15 Lié au compte n°
        %th.pc15 Libellé du compte
        %th.pc10 Actions
      %tbody
        = render partial:'admin/natures/nature', collection:@natures
  
        