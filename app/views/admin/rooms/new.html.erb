<div class="champ">
  <h3>
    Nouvel organisme
  </h3><div class="inner-champ">

<div class="inputs">
<%= simple_form_for([:admin,@organism], :url =>admin_rooms_path, :method => :post, :html=> {class: 'form-horizontal'}) do |f| %>
<%= f.error_notification %>

    <%= f.input :title,  input_html: {class: "span3"} %>
    <%= f.input :comment,  input_html: {class: "span6"} %>
    <%= f.input :racine, 
           label:'Nom de la base',
           input_html: {class: "span3"},
           hint:'lettres minuscules uniquement, minimum 6, sans espace' %>

    <%= f.input :status, :label=>'Statut',
         :collection=>LIST_STATUS, :as=>:inline_radio_buttons %>

   <div class="form-actions">
    <%= f.button :submit, class: "btn-primary span2 with_spinner" %>
   </div>
<% end %>
  </div>
</div></div>