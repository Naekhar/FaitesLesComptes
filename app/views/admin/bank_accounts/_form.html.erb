 <div class="inputs">
<%= simple_form_for([:admin,@organism,@bank_account], :wrapper=>:prepend, :html=> {class: 'form-inline'}) do |f| %>
  <%= f.error_notification %>

 
    <%= f.input :name,  label_html: {class: "span2"}, input_html: {class: "span3"}%>
    <%= f.input :number,  label_html: {class: "span2"}, input_html: {class: "span3"} %>
    
    <%= f.input :comment , label_html: {class: "span2"}, input_html: {rows: 4, class: "span3"} %>
    <%= f.input :address,  label_html: {class: "span2"}, input_html: {rows: 4, class: "span3"} %>
  </div>

  <div class="form-actions offset2">
    <%= f.button :submit, class: "btn-primary span2"  %>
  </div>
<% end %>

