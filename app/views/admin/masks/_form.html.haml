= simple_form_for([@organism, @mask], :url => admin_organism_masks_path, :method => :post, :html=> {class: 'form-horizontal'}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title,  input_html: {class: "span3"}
    = f.input :comment,  input_html: {rows: 4, class: "span3"}
    

  .form-actions
    = f.button :submit, class: "btn-primary span2" 
