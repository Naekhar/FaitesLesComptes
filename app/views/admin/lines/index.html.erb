          <td class="clickable"><%= line.destination.name if line.destination %></td>
          <td class="nombre clickable"><%= debit_credit(line.debit) %></td>
          <td class="nombre clickable"><%= debit_credit(line.credit) %></td>
          <td class="clickable"><%= line.payment_mode %></td>
          <td class="icon"><%=  icon_to 'modifier.png', edit_book_line_path(line.book,line) unless line.locked? %></td>
          <td class="icon"><%=  icon_to 'supprimer.png', [line.book,line], confirm: 'Etes vous sur?', method: :delete unless line.locked? %></td>
     </tr>
      <% end %>
