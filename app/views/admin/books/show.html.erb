<% end -%>
<fieldset>
  <legend>Détail</legend>
<p>
  <b>Image :</b>
  <%= image_tag(@book.image_url, class: 'list_image') %>

</p>
<p><b>Titre : </b> <%= @book.title %></p>
<p><b>Description : </b> <%= @book.description %></p>
