<div class="panel-body">

  <%= simple_form_for([:admin, @period, @account],
    :html=> {class: 'form-horizontal'}, wrapper: :horizontal_form, 
      wrapper_mappings:{boolean: :horizontal_boolean}) do |f| %>
      <%= f.error_notification %>
      <div class='form-inputs'>

        <%= f.input :number , my_wrapper_html: {class:'col-lg-2'},
            :input_html=>{:placeholder=>'2 Ã  8 chiffres', class:'col-lg-12'},
              :disabled=>!@account.new_record? %>
            
            <%= f.input :title, my_wrapper_html: {class:'col-lg-4'} %>
        
            <% if @organism.sectored? %>
              <%= f.association :sector, 
                my_wrapper_html: {class:'col-lg-3'},
                placehoder:'Uniquement pour les comptes 6 ou 7'%>

            <% end %>
        
            <%= f.input :used, as: :boolean %>
        
            </div>
            <div class="form-actions">
              <%= f.button :submit, class: "btn-primary col-lg-2 col-lg-offset-2" %>
            </div>
          <% end %>
        </div>