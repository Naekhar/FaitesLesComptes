= content_for :menu do 
  = icon_to 'nouveau.png', new_admin_organism_period_account_path(@organism, @period)

.champ
  %h3 Liste des comptes

  %table.table.table-striped.table-bordered.table-condensed.data_table(cellpadding="0" cellspacing="0" border="0")
    %thead
      %tr
        %th Numéro
        %th Intitulé
        %th Natures rattachées
        %th Actif
        %th Actions
 
    %tbody
      - @compta_accounts.each do |compta_account|
        %tr
          %td= compta_account.number.to_s
          %td= compta_account.title
          %td= render partial: 'nature', collection: compta_account.natures.all if compta_account.natures.count > 0
          %td= t_used compta_account
          %td
            = icon_to 'afficher.png', [:admin,@organism,@period,compta_account]
            = icon_to 'modifier.png', edit_admin_organism_period_account_path(@organism, @period, compta_account)
            = icon_to 'supprimer.png', [:admin,@organism,@period,compta_account], :confirm => 'Etes vous sur ?', :method => :delete
  
