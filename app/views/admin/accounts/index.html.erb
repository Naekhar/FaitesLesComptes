<%= content_for :menu do %>
<%= icon_to 'nouveau.png', new_admin_organism_period_account_path(@organism, @period) %>
<% end -%>

<fieldset><legend> <%= @organism.title %> - <%= @period.exercice %> -   Liste des Comptes</legend>
<table class="data_table display">
  <thead
  <tr>
    <th>Numéro</th>
    <th>Intitulé</th>
    <th>Utilisé</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
<% @compta_accounts.each do |compta_account| %>
  <tr>
    <td><%= compta_account.number.to_s %></td>
    <td><%= compta_account.title %></td>
    <td><%=t_used compta_account %></td>
    <td>
    <%= icon_to 'afficher.png', [:admin,@organism,@period,compta_account] %>
    <%= icon_to 'modifier.png', edit_admin_organism_period_account_path(@organism, @period, compta_account) %>
    <%= icon_to 'supprimer.png', [:admin,@organism,@period,compta_account], :confirm => 'Etes vous sur ?', :method => :delete %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>

</fieldset>


