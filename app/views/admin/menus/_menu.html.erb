<ul class="nav nav-tabs">

  <li class="dropdown <%= 'active' if controller.controller_name =='organisms'  %> ">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      ORGANISMES
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to 'Listes des organismes', admin_organisms_path %></li>
      <%= content_tag(:li, :class=>"divider"){} %>
      <% cache("saisie_#{current_user.name}")  do %>
      <% current_user.organisms_with_room.each do |groom| %>
        <li>
          <%= link_to groom[:organism].title, admin_room_path(groom[:room])  %>
        </li>
        <%  end %>
      <% end %>
    </ul>
  </li>

  <% if (@organism  && !@organism.new_record?) %>
    <li class="dropdown <%= 'active' if controller.controller_name =='lines'  %>">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">LIVRES<b class="caret"></b></a>
      <%= admin_menu('book') %>
    </li>

    

    <li class="dropdown <%= 'active' if controller.controller_name =='destinations'  %>">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">DESTINATIONS<b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Afficher', admin_organism_destinations_path(@organism)  %></li>
        <li><%=link_to  'Nouveau', new_admin_organism_destination_path(@organism)  %></li>
      </ul>
    </li>

    <li class="dropdown <%= 'active' if controller.controller_name =='bankaccounts'  %>">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">BANQUES<b class="caret"></b></a>
      <%= admin_menu('bank_account') %>
    </li>

    <li class="dropdown <%= 'active' if controller.controller_name =='cashes'  %>">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">CAISSES<b class="caret"></b></a>
      <%= admin_menu('cash') %>
    </li>


    <li class="dropdown <%= 'active' if controller.controller_name =='periods'  %>">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">EXERCICES<b class="caret"></b></a>
      <ul class="dropdown-menu">
        <%= content_tag(:li) {link_to 'Afficher', admin_organism_periods_path(@organism)} %>
        <%=  content_tag(:li, :class=>"divider"){} %>
        <% @organism.periods.reject {|r| r.new_record? }.each do |p| %>
          <li><%= link_to_unless(current_period?(p), p.exercice, change_admin_organism_period_path(@organism, p)) {|name| content_tag(:span, :class=>'disable') {name} } %></li>
         
        <% end %>
        <%=  content_tag(:li, :class=>"divider"){} %>
        <li><%= link_to_unless(@organism.max_open_periods?, 'Nouveau', new_admin_organism_period_path(@organism)) {|name| content_tag(:span, :class=>'disable') {name} }%></li>
      </ul>
    </li>

    <% if  @period && @period.persisted? %>


      <li class="dropdown <%= 'active' if controller.controller_name =='natures'  %>">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">NATURES<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Afficher', admin_organism_period_natures_path(@organism,@period)  %></li>
          <li><%=link_to  'Nouveau', new_admin_organism_period_nature_path(@organism, @period)  %></li>
        </ul>
      </li>
   

      <li class="dropdown <%= 'active' if controller.controller_name =='admin_accounts'  %>">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">COMPTES<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <%=  content_tag(:li, link_to('Afficher', admin_period_accounts_path(@period)))  %>
          <%= content_tag(:li, link_to('Importer', select_plan_admin_period_path(@period))) unless @period.accounts.any? %>
          <%= content_tag(:li, link_to('Nouveau', new_admin_period_account_path(@period))) %>
         <% unless @period.accounts.empty? %>
            <%=  content_tag(:li, :class=>"divider"){} %>
            <%= content_tag(:li, link_to( 'Relier aux natures', mapping_admin_period_accounts_path(@period))) %>
          <% end %>
         <%=  content_tag(:li, link_to('Changer Nomenclature', edit_admin_organism_nomenclature_path(@organism) ))  %>
          
        
         
         </ul>

      </li>

  <% end %>

<% end %>
<!-- pas très bien nommé, la suite affiche les icones -->
      <li>
          <%= yield :menu %>
      </li>
</ul>