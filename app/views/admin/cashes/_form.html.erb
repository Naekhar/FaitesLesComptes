<div class="panel-body">
    <%= simple_form_for([:admin,@organism,@cash],
                        :html=> {class: 'form-horizontal'},
                        wrapper: :horizontal_form) do |f| %>
                        <%= f.error_notification %>

                        <div class="form-inputs">
                            <%= f.input :name,  my_wrapper_html: {class: "col-lg-3"}%>

                            <%= f.input :comment,  my_wrapper_html: {rows: 4, class: "col-lg-3"} %>
                            <% if @organism.sectored? %>

                                <%= f.association :sector,  my_wrapper_html: {class: "col-lg-3"},
                                    prompt:'Choisissez un secteur',
                                    collection: @organism.sectors,
                                    required:true %>
                            <% else %>
                                <%= f.association :sector,  my_wrapper_html: {class: "col-lg-3"},
                                    prompt:'Choisissez un secteur',
                                    collection: @organism.sectors,
                                    required:true, as: :hidden %>
                            <% end %>
                        </div>
                        <div class="form-actions">
                            <%= f.button :submit, class: "btn-primary col-lg-2 col-lg-offset-2"  %>
                        </div>
                    <% end %>
                </div>

