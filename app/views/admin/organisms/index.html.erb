<%#
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>

<%=  content_for :menu do %>
<%= icon_to  'nouveau.png', new_admin_organism_path %>
       <%= icon_to 'restauration.png', new_admin_restore_path ,
         :confirm=>"Créer un nouvel organisme à partir d'un fichier ?",
                :title=>"Permet de créer un organisme à partir d'un fichier de sauvegarde" %>
       
<% end %>


<div class="champ">
  <h3>Liste des organismes</h3>
  </div>
<table  cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed data_table">
  <thead>
  <tr>
    <th class="span2">Titre</th>
    <th class="span6">Description</th>
    <th class="span2">Dernière sauvegarde</th>
    <th class="span2">Actions</th>
  </tr>
  </thead>
  <tbody>
<% @organisms.each do |organism| %>
  <tr>
    <td><%= organism.title %></td>
    <td><%= organism.description %></td>
    <td><%=l organism.archives.last.created_at  unless organism.archives.empty? %></td>
    <td><%= icon_to 'sauvegarde.png', new_admin_organism_archive_path(organism),
              :title=>"Fait une sauvegarde de toutes les données de l'organisme" %>
      <%= icon_to 'detail.png', [:admin, organism] %>
      <%= icon_to 'modifier.png', edit_admin_organism_path(organism) %>
        <%= icon_to 'afficher.png', [organism], title: 'affichage dans la partie saisie' %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>
