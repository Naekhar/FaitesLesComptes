<%#
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>

<%=  content_for :menu do %>
<%= icon_to  'nouveau.png', new_admin_organism_path %>
       <%= icon_to 'restauration.png', new_admin_restore_path ,
         :confirm=>"Créer un nouvel organisme à partir d'un fichier ?",
                :title=>"Permet de créer un organisme à partir d'un fichier de sauvegarde" %>
       
<% end %>


<div class="champ">
  <h3>Liste des organismes</h3>
  </div>

<table  cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed" id="admin_organism_table">
  <thead>
  <tr>
    <th>Titre</th>
    <th>Description</th>
    <th>Dernière sauvegarde</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
<% @organisms.each do |o| %>
  <tr>
    <td><%= o[:organism].title %></td>
    <td><%= o[:organism].description %></td>
    <td><%=l o[:organism].archives.last.created_at  unless o[:organism].archives.empty? %></td>
    <td><%= icon_to 'sauvegarde.png', new_admin_organism_archive_path(o[:room].id),
              :title=>"Fait une sauvegarde de toutes les données de l'organisme" %>
      <%= icon_to 'detail.png', [:admin, o[:room]] %>
      <%= icon_to 'modifier.png', edit_admin_room_path(o[:room]) %>
      <%= icon_to 'afficher.png',[:admin, o[:room]], title: 'affichage dans la partie saisie' %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>

