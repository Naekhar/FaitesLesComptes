<ul>
  <li><h2>Banques</h2>
    <ul>
      <% @organism.bank_accounts.each do |b| %>
        <li><%= link_to b.number, admin_organism_bank_account_path(@organism,b)  %>
          <ul>
            <li><%=link_to  'Modifier', edit_admin_organism_bank_account_path(b)  %></li>

            <li><%= link_to 'Supprimer', [:admin, @organism, b], confirm: 'Etes vous sur ?' %></li>
          </ul>
        </li>
      <% end %>

    </ul>
  </li>
</ul>

<ul>
  <li><h2>Caisses</h2>
    <ul>
      <% @organism.cashes.each do |b| %>
        <li><%= link_to b.name, admin_organism_cash_path(@organism,b)  %>
          <ul>
            <li><%=link_to  'Modifier', edit_admin_organism_cash_path(b)  %></li>

            <li><%= link_to 'Supprimer', [:admin, @organism, b], confirm: 'Etes vous sur ?' , method: :delete %></li>
          </ul>
        </li>
      <% end %>

    </ul>
  </li>
</ul>


<ul>
  <li><h2>Exercices</h2>
    <ul>
      <% @organism.periods.each do |c| %>
        <li><%= link_to c.to_s, admin_organism_period_path(@organism,c) %>
          <ul>
            <li><%= link_to 'Afficher', admin_organism_period_path(@organism, c) %></li>
            <li><%= link_to 'Clore -TODO', admin_organism_period_path(@organism, c) if c.open %></li>
            <li><%= link_to 'Archiver -TODO', admin_organism_period_path(@organism, c) unless c.open %></li>
            <li><%= link_to 'Supprimer', [:admin, @organism, c], confirm: 'Etes vous sur', method: :delete %></li>
          </ul>
        </li>
      <% end %>
    </ul>

  </li>
</ul>

