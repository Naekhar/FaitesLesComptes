<!DOCTYPE html>
<html>
  <head>
    <title>Faites les comptes ! Administration</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body class='<%= "admin_#{controller.controller_name}" %>  admin'>
    <div class="container-fluid">

      <div class="navbar">
        <div class="navbar navbar-inner">
          <div class="container">
            <a class="brand"><%= header_title %></a>
            <ul class="nav nav-pills pull-right">

              <li>   <%= link_to 'Saisie/Consult',  ((@organism && !@organism.new_record?) ? organism_path(@organism) : organisms_path )  %></li>
              <li class="active"><a href="#">Administration</a></li>
              <li>  <%= link_to 'Compta',  ((@organism  && @organism.persisted?) ? compta_organism_path(@organism) : compta_organisms_path )  %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row-fluid">

        <div>
          <%= render 'admin/organisms/menu'%>
        </div>

          <%= render 'layouts/bandeau' %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
