  </div>



  <body class='<%= controller.controller_name %>'>

     <nav id="menu">
    <%= yield :menu %>
  </nav>
  <nav id="submenu">
       <%= yield :submenu %>
</nav>


    <div id="bandeau"  ><%= yield :bandeau %>
      <span id="notice"><%= notice %></span>
      <span id="alert"><%= alert %></span>
    </div>

 
  <%= yield %>

</body>
</html>
