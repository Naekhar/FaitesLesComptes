= content_for :menu do 
  = icon_to 'nouveau.png', new_organism_bank_account_check_deposit_path(@organism, @bank_account) if @nb_to_pick > 0
  = icon_to 'modifier.png', edit_organism_bank_account_check_deposit_path(@organism, @bank_account, @check_deposit)
  = icon_to 'navigation90.png', organism_bank_account_check_deposits_path(@organism, @bank_account)
.champ
  = render 'title'
  .pc60
    %table.table.table-striped.table-bordered.table-condensed.data_table#check_added(cellpadding="0" cellspacing="0" border="0")
      = render 'thead'
      %tbody
        -  @check_deposit.checks.each do |check|
          %tr
            = render partial: 'line', object: check

      = render partial: 'tfoot', :object=>@check_deposit.total_checks 