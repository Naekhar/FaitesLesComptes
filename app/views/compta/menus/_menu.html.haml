%ul.nav.nav-tabs
  
  %li.dropdown(class="#{controller.controller_name == "organisms" ? "active" : nil}")
    %a{:href=>'#', :class=>'dropdown-toggle',:data=>{:toggle=>'dropdown'} }
      ORGANISMES
      %b.caret
    %ul.dropdown-menu
      
      
      - Organism.all.reject {|r| r.new_record? }.each do |r|
        %li= link_to(r.title, compta_organism_path(r))
  - unless @period.nil? && @pariod.accounts.nil?
    %li.dropdown(class="#{controller.controller_name == "accounts" ? "active" : nil}")
      %a{:href=>'#', :class=>'dropdown-toggle', :data=>{:toggle=>'dropdown'} }
        EDITIONS
        %b.caret
      %ul.dropdown-menu
        
        %li= link_to('Balance', new_compta_period_balance_path(@period))
  - unless @organism.nil? && @organism.periods.count <= 1
    %li.dropdown(class="#{controller.controller_name == "periods" ? "active" : nil}")
      %a{:href=>'#', :class=>'dropdown-toggle',  :data=>{:toggle=>'dropdown'} }
        EXERCICES
        %b.caret
      %ul.dropdown-menu
        - @organism.periods.each do |c|
          %li= link_to(c.exercice, compta_organism_period_path(@organism, c))

  %li= yield :menu


