<%= content_for :menu do %>
<a data-toggle="modal" class="icon_menu" href="#modal_form_balance">
  <%= image_tag('icones/nouveau.png') %>
</a>
<%=  export_icons(:period_id=>@period.id, :compta_balance=>{:from_account_id=>@balance.from_account_id, :to_account_id=>@balance.to_account_id,
        :from_date_picker=>@balance.from_date_picker, :to_date_picker=>@balance.to_date_picker }) %>


<% end %>
<div class="champ">
  <h3>Balance <%= @balance.provisoire? ? 'provisoire' : '' %> </h3>
  <%= render partial: 'modal_form' %>
</div>
<div id="balance_table">
  <%= render partial: 'balance' %>
</div>



