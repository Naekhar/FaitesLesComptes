%table(cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed balance")
  %thead
    %tr

      %th(colspan="2")
      %th.center(colspan="2")= sold_at_title(@balance.from_date)
      %th.center(colspan="2") Mouvement de la période
      %th.center= sold_at_title(@balance.to_date)
  
    %tr
      %th.pc10 Numéro
      %th Libellé
      %th.pc10.numeric Débit
      %th.pc10.numeric Crédit
      %th.pc10.numeric Montant
          
  %tbody
    = render partial:'balance_line', collection:@balance.balance_lines

  %tfoot#table_foot
    %tr.total#totaux
      %th.numeric(colspan="2" rowspan="1") Totaux
      - @balance.total_balance.each do |value|
        = content_tag :th, debit_credit(value), class: 'numeric'
