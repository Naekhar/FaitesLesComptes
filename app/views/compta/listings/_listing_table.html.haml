%table(cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed listing_data_table")
  %thead
    %tr
      %th.pc5.date-euro Date
      %th.pc10 Réf
      %th.pc25 Libellé
      %th.pc20 Nature
      %th.pc20 Destination
      %th.pc10 Débit
      %th.pc10 Crédit
  %tbody>
    = render  partial:'compta/lines/line', collection:@listing.lines
  %tfoot
    %tr.total#totaux
      %th(colspan="5" style="text-align:right" rowspan="1")
        Totaux:
        %br
        Totaux globaux:
      %th#tdebit(rowspan="1" colspan="1" class="numeric nombre")
        =  debit_credit(@listing.total_debit)
        %br
        =  debit_credit(@listing.total_debit+ @listing.solde_debit_avant)
      %th#tdcredit(rowspan="1" colspan="1" class="numeric nombre")
        =  debit_credit(@listing.total_credit)
        %br
        =  debit_credit(@listing.total_credit+ @listing.solde_credit_avant)
