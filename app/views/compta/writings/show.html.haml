= content_for :menu do
  = icon_to 'retour.png', compta_book_writings_path(@book)

.champ
  %h3 Affichage d'une écriture

.row-fluid
  .span2
    Date :
    =l @writing.date
  .span6
    Libellé :
    =@writing.narration
  .span2
    Réf :
    =@writing.ref
  .span2
    Actions :


%table(cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed")
  %thead
    %tr
      %th.pc25 N° de compte
      %th.pc25 Intitulé
      %th.pc25 Débit
      %th.pc25 Crédit
  %tbody
    - @writing.compta_lines.each do |cl|
      %tr
        %td=cl.account.number
        %td=cl.account.title
        %td=cl.debit
        %td=cl.credit
