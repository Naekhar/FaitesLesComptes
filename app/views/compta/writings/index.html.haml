=content_for :menu do
  =icon_to 'nouveau.png', new_compta_book_writing_path(@book)
  - if @writings.unlocked.not_transfer.any?
    =icon_to 'verrouiller.png', all_lock_compta_book_writings_path(@book), :method=>:post, confirm:'Cette action est définitive. Confirmez-vous ?', title:'Verrouiller toutes les écritures de ce livre' unless @book.writings.unlocked.empty?
  - elsif @writings.unlocked.any?
    = image_tag('icones/nb_verrouiller.png', title:'Des écritures ne sont pas verrouillées, mais ne peuvent l\'être que dans la partie Saisie/Consult')

.champ
  %h3 Journal #{@book.title} : Liste d'écritures

= render :partial=>'compta/writings/writing', :collection=>@writings
