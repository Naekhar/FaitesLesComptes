%ul.mois
  - @period.list_months.each do |m|
    %li{:class=>"#{'active' if current_page?(mois:m.month, an:m.year)}" }
      = link_to_unless_current(m.to_short, compta_book_writings_path(@book, mois:m.month, an:m.year))
  %li{:class=>"#{'active' if current_page?(mois:'tous')}" }
    = link_to_unless_current('tous', compta_book_writings_path(@book, mois:'tous'))
