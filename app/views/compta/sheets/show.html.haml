=content_for :menu do
  = icon_to 'retour.png', :back
  = export_icons(params)


.champ
  %h3= @sheet.total_general.title

.row-fluid
  -if @sheet.sens == :actif
    .actif
      %table.pc100
        %thead
          %th.pc60 Rubrique
          %th.pc10 Brut
          %th.pc10
            Amortissement
            %br Provision
          %th.pc10 Net
          %th.pc10 Exercice précédent
        %tbody
          =render :partial=>'detailed_actif', :object=>@sheet.datas
  -else
    .passif
      %table.pc100
        %thead
          %th.pc80 Rubrique
          %th.pc10 Montant
          %th.pc10 Exercice précédent
        %tbody
          =render :partial=>'detailed_passif', :object=>@sheet.datas