// on ferme la fenêtre
$('button.close').click();
// on récrit le formulaire - ceci pour le cas où l'on viendrait d'un new
// avec des erreurs afin d'effacer les messages d'erreurs
$('div.modal-body').html('<%= j render partial:'modal_body_form_analytical_balance' %>');
// on réassocie les date picker
$('.input_date_picker').datepicker(
    {
        dateFormat: 'dd/mm/yy',
        minDate: $(this).attr('data-jcmin'),
        maxDate: $(this).attr('data-jcmax')
    }
);
// on rend la balance
$('#anabal_table').html(" <%= j render 'analytical_balance' %>");

// il faut également mettre à jour le lien pour les icones pdf, csv et xls
$('#delayed_icon_pdf').attr('href', '<%=j  produce_pdf_compta_period_analytical_balance_path(@period,  :compta_analytical_balance=>@params_anabal).html_safe %>');
$('#icon_xls').attr('href', '<%=  compta_period_analytical_balance_path(@period, :compta_analytical_balance=>@params_anabal,:format=>'xls').html_safe %>');
$('#icon_csv').attr('href', '<%=  compta_period_analytical_balance_path(@period,  :compta_analytical_balance=>@params_anabal, :format=>'csv').html_safe %>');

