      <th>Type</th>
      <th>Debit</th>
      <th>Crédit</th>
    </tr>
  </thead>

  
 


    <% unless @bank_extract_lines.empty? %>
  <tbody>
      <% @bank_extract_lines.each do  |bank_extract_line| %>

        <tr><%=  render bank_extract_line %> </tr>
      <% end %>
         </tbody>
         <tfoot>
           <tr class="total">
            
             <td></td><td></td><td></td>
             <td class="total">Totaux</td>
             <td class="total numeric"><%= debit_credit(@bank_extract.total_lines_debit) %></td>
             <td class="total numeric"><%= debit_credit(@bank_extract.total_lines_credit) %></td>
            
           </tr>
         </tfoot>
    <% end %>
 

</table>

       
</div>


</div>